pipeline {
    agent any

    environment {
        TARGET_SERVER = 'ubuntu@35.170.71.78'
        FRONTEND_DIR = '/home/ubuntu/Cogniitec_Website_Frontend'
        FRONTEND_SERVICE_NAME = 'Cog_front'
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Deploy Frontend to EC2') {
            steps {
                script {

                    sh """
                    rsync -avz --delete ./ ${TARGET_SERVER}:${FRONTEND_DIR}/
                    """

                    sh """
                    ssh ${TARGET_SERVER} << 'EOF'
                        set -e
                        cd ${FRONTEND_DIR}

                        node -v
                        npm -v

                        rm -rf node_modules package-lock.json
                        npm install express@4 --force
                        npm install cors --force
                        npm install --force
                        
                        npm run build

                        pm2 restart ${FRONTEND_SERVICE_NAME} \
                        || pm2 start server.js --name ${FRONTEND_SERVICE_NAME}
EOF
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Frontend Deployed and Service Restarted Successfully!'
        }
        failure {
            echo 'Frontend Deployment Failed. Please check logs for details.'
        }
    }
}
